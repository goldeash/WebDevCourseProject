@{
    ViewData["Title"] = "Create Tag";
}

<h2>Create New Tag</h2>

<form asp-action="Create">
    <div>
        <label for="name">Tag Name:</label>
        <input type="text" id="name" name="name" required />
    </div>
    <div>
        <input type="submit" value="Create" />
        <a asp-action="Index">Cancel</a>
    </div>
</form>