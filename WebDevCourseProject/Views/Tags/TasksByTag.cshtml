@model List<WebDevCourseProject.Models.TodoTask>
@{
    ViewData["Title"] = $"Tasks with tag: {ViewBag.TagName}";
}

<h2>Tasks with tag: @ViewBag.TagName</h2>

@if (Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Status</th>
                <th>Todo List</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr style="@(task.IsOverdue ? "background-color: #ffebee;" : "")">
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.DueDate.ToString("MMM dd, yyyy")</td>
                    <td>@task.Status</td>
                    <td>@task.TodoList.Title</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tasks found with this tag.</p>
}

<a asp-action="Index">Back to Tags</a>