@model WebDevCourseProject.Models.TodoTask
@{
    ViewData["Title"] = "Task Details";
    var allTags = ViewBag.AllTags as List<WebDevCourseProject.Models.Tag>;
    var taskTags = ViewBag.TaskTags as List<WebDevCourseProject.Models.Tag>;
}

<h2>Task Details</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl>
        <dt>Description</dt>
        <dd>@Model.Description</dd>

        <dt>Due Date</dt>
        <dd>@Model.DueDate.ToString("MMM dd, yyyy")</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>

        <dt>Created Date</dt>
        <dd>@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>

        <dt>Todo List</dt>
        <dd>@Model.TodoList.Title</dd>
    </dl>
</div>

<div>
    <h5>Tags</h5>
    @if (taskTags != null && taskTags.Any())
    {
        <ul>
            @foreach (var tag in taskTags)
            {
                <li>
                    @tag.Name
                    <form asp-action="RemoveTag" method="post" style="display:inline;">
                        <input type="hidden" name="taskId" value="@Model.Id" />
                        <input type="hidden" name="tagId" value="@tag.Id" />
                        <button type="submit">Remove</button>
                    </form>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No tags added.</p>
    }

    @if (allTags != null && allTags.Any())
    {
        <h6>Add Tag:</h6>
        <form asp-action="AddTag" method="post">
            <input type="hidden" name="taskId" value="@Model.Id" />
            <select name="tagId">
                @foreach (var tag in allTags)
                {
                    <option value="@tag.Id">@tag.Name</option>
                }
            </select>
            <button type="submit">Add Tag</button>
        </form>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index" asp-route-listId="@Model.TodoListId">Back to Tasks</a>
</div>