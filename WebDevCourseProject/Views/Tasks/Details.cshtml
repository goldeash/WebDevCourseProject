@model WebDevCourseProject.Models.TodoTask
@{
    ViewData["Title"] = "Task Details";
}

<h2>Task Details</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl>
        <dt>Description</dt>
        <dd>@Model.Description</dd>

        <dt>Due Date</dt>
        <dd>@Model.DueDate.ToString("MMM dd, yyyy")</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>

        <dt>Created Date</dt>
        <dd>@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>

        <dt>Todo List</dt>
        <dd>@Model.TodoList.Title</dd>

        <dt>Tags</dt>
        <dd>
            @if (Model.Tags != null && Model.Tags.Any())
            {
                @foreach (var tag in Model.Tags)
                {
                    <span style="background: #f0f0f0; padding: 3px 8px; margin: 0 3px; border-radius: 3px; display: inline-block;">
                        @tag.Name
                    </span>
                }
            }
            else
            {
                <span>No tags</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index" asp-route-listId="@Model.TodoListId">Back to Tasks</a>
</div>